<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00D09E"
    android:gravity="center"
    android:orientation="vertical">

    <!-- Circular Icon (You can replace it with an animated drawable) -->
    <ImageView
        android:id="@+id/successIcon"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_check_progress"
        android:layout_gravity="center"
        android:contentDescription="Success Icon" />

    <!-- Success Message -->
    <TextView
        android:id="@+id/tvSuccessMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password Has Been\nChanged Successfully"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="20dp"/>
</LinearLayout>
