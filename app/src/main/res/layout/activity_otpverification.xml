<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00D09E"
    android:orientation="vertical"
    tools:context=".OtpVerificationActivity">

    <!-- Header Section -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="197dp"
        android:gravity="center"
        android:padding="20dp">

        <TextView
            android:id="@+id/tvSecurityPin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Security Pin"
            android:textColor="@color/black"
            android:textSize="34sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <!-- White Rounded Background -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="675dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/rounded_bg"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="56dp"
                android:text="Enter Security Pin"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/otp1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/rounded_bg_corner"
                    android:gravity="center"
                    android:inputType="number" />

                <EditText
                    android:id="@+id/otp2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/rounded_bg_corner"
                    android:gravity="center"
                    android:inputType="number" />

                <EditText
                    android:id="@+id/otp3"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/rounded_bg_corner"
                    android:gravity="center"
                    android:inputType="number" />

                <EditText
                    android:id="@+id/otp4"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/rounded_bg_corner"
                    android:gravity="center"
                    android:inputType="number" />

                <EditText
                    android:id="@+id/otp5"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/rounded_bg_corner"
                    android:gravity="center"
                    android:inputType="number" />

                <EditText
                    android:id="@+id/otp6"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/rounded_bg_corner"
                    android:gravity="center"
                    android:inputType="number" />
            </LinearLayout>

            <Button
                android:id="@+id/btnAccept"
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="100dp"
                android:background="@drawable/rounded_bg_corner"
                android:backgroundTint="@color/primary_green"
                android:text="Accept"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnSendAgain"
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="150dp"
                android:background="@drawable/rounded_bg_corner"
                android:text="Send Again"
                android:textColor="#000000"
                android:textStyle="bold" />

            <!-- Social Media Login Icons -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="or sign up with"
                android:textColor="@android:color/black"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/btnFacebook"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/facebook_icon" />

                <ImageView
                    android:id="@+id/btnGoogle"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/google_icon" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
