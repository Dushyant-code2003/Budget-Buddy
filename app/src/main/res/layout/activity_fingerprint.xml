<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#00D09E"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".FingerprintActivity">

    <!-- Header Section -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Security Fingerprint"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <!-- White Rounded Background -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="667dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/rounded_bg"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Fingerprint Icon -->
            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_marginBottom="60dp"
                android:layout_marginTop="30dp"
                android:contentDescription="Fingerprint Icon"
                android:src="@drawable/fingerprint_icon" />

            <!-- Instruction Text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp"
                android:gravity="center"
                android:text="Use Fingerprint To Access"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="60dp"
                android:gravity="center"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt."
                android:textColor="@android:color/black"
                android:textSize="12sp" />

            <!-- Fingerprint Button -->
            <Button
                android:id="@+id/btnUseFingerprint"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_bg_corner"
                android:text="Use Touch ID"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <!-- Alternative PIN Option -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="Â¿Or prefer use pin code?"
                android:textColor="@android:color/black"
                android:textSize="12sp" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
